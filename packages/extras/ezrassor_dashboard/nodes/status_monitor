#!/usr/bin/env python
"""Call the status_monitor node in the ezrassor_status_monitor package.

Written by Tiger Sachse.
"""
import ezrassor_status_monitor

# Some constants for this node.
QUEUE_SIZE = 10
TRIGGER_STRING = "ezrassor"
CPU_USAGE_TOPIC = "cpu_usage"
MEMORY_USAGE_TOPIC = "memory_usage"
BATTERY_USAGE_TOPIC = "battery_usage"
DEFAULT_NODE_NAME = "status_monitor"

# Main entry point to this node.
ezrassor_status_monitor.status_monitor.start_node(
    DEFAULT_NODE_NAME,
    TRIGGER_STRING,
    CPU_USAGE_TOPIC,
    MEMORY_USAGE_TOPIC,
    BATTERY_USAGE_TOPIC,
    QUEUE_SIZE,
)
